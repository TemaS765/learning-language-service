{% extends 'base.html.twig' %}

{% block body %}
   <h1>Слова</h1>
   <div class="list-group">
      {% for word in words %}
         <a href="{{ path('edit_word', {id: word.id}) }}" class="list-group-item list-group-item-action" aria-current="true">
            <div class="d-flex w-100 justify-content-between">
               <h5 class="mb-1">{{ word.text|e }}</h5>
            </div>
            <p class="mb-1">{{ word.translate|e }}</p>
         </a>
      {% endfor %}
   </div>
{% endblock %}